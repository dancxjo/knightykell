<?xml version="1.0" encoding="UTF-8"?>
<dds xmlns="https://cdds.io/config">
  <General>
    <!-- Avoid loopback; allow OS to choose best interface (works with host networking) -->
    <NetworkInterfaceAddress>auto</NetworkInterfaceAddress>
    <AllowMulticast>true</AllowMulticast>
    <EnableMultiThreaded>true</EnableMultiThreaded>
  </General>
  <Discovery>
    <ParticipantIndex>auto</ParticipantIndex>
    <Peers>
      <!-- Empty uses multicast on local subnet; add peers if you need unicast-only -->
    </Peers>
  </Discovery>
  <Tracing>
    <Verbosity>warning</Verbosity>
  </Tracing>
</dds>

